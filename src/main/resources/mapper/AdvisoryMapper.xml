<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sipc.xxsc.mapper.AdvisoryMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO advisory ( doctor_id, user_id )
        VALUES (#{doctorId}, #{userId})
    </insert>
    <select id="selectByUserIdAndDoctorId" resultType="com.sipc.xxsc.pojo.domain.Advisory">
        SELECT
            *
        FROM
            advisory
        WHERE
            doctor_id = #{doctorId}
        AND user_id = #{userId}
    </select>
    <select id="selectByDoctorId" resultType="com.sipc.xxsc.pojo.domain.Advisory">
        SELECT
            *
        FROM
            advisory
        WHERE
            doctor_id = #{doctorId}
    </select>
    <select id="selectByUserId" resultType="com.sipc.xxsc.pojo.domain.Advisory">
        SELECT
            *
        FROM
            advisory
        WHERE
            user_id = #{userId}
    </select>
    <select id="selectById" resultType="com.sipc.xxsc.pojo.domain.Advisory">
        SELECT
            *
        FROM
            advisory
        WHERE
            id = #{advisoryId}
    </select>
</mapper>
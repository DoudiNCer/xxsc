<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.xxsc.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.sipc.xxsc.pojo.domain.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="CHAR" property="name"/>
        <result column="password" jdbcType="CHAR" property="password"/>
        <result column="email" jdbcType="VARBINARY" property="email" />
    </resultMap>

    <insert id="insert" parameterType="com.sipc.xxsc.pojo.domain.User">
        INSERT INTO user(name, password, email)
        VALUES(#{name}, #{password}, #{email})
    </insert>

    <update id="updatePasswordByPrimaryKey">
        UPDATE user
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        SELECT * FROM user
        WHERE id = #{id}
    </select>

    <select id="selectByUserName" resultType="com.sipc.xxsc.pojo.domain.User">
        SELECT * FROM user
        WHERE name = #{name}
    </select>

</mapper>